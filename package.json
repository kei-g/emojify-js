  "author": {
    "email": "km.8k6ce+npm@gmail.com",
    "name": "kei-g"
  },
  "bin": {
    "emojify": "bin/emojify.js"
  },
  "bugs": {
    "url": "https://github.com/kei-g/emojify-js/issues"
  },
  "description": "Text formatter for `:emoji:` style",
  "devDependencies": {
    "@kei-g/chmod": "^1.0.7",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "chai": "^4.3.4",
    "eslint": "^8.5.0",
    "mkdirp": "^1.0.4",
    "mocha": "^9.1.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "terser": "^5.10.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "homepage": "https://github.com/kei-g/emojify-js",
  "keywords": [
    "convert",
    "converter",
    "emoji",
    "emojify",
    "emojifier",
    "emojis",
    "emoticon",
    "format",
    "formatter",
    "ideogram",
    "ideograms",
    "text",
    "text-convert",
    "text-converter",
    "text-format",
    "text-formatter",
    "utility",
    "utilities"
  ],
  "license": "BSD-3-Clause",
  "main": "index.js",
  "name": "@kei-g/emojify",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kei-g/emojify-js.git"
  },
  "scripts": {
    "build": "npm-run-all -p distclean lint -s build:mkdir build:emojify build:chmod",
    "build:assets": "run-s build:assets:mkdir build:assets:copy",
    "build:assets:copy": "ln node-emoji/lib/emoji.json assets/",
    "build:assets:mkdir": "mkdirp assets",
    "build:chmod": "chmod +x bin/emojify.js",
    "build:emojify": "run-s build:tsc build:terse",
    "build:mkdir": "mkdirp bin",
    "build:rmdecl": "rimraf bin/emojify.d.ts",
    "build:terse": "run-p build:rmdecl build:terse:*",
    "build:terse:bin/emojify": "terser build/bin/emojify.js -c -m -o bin/emojify.js --toplevel",
    "build:terse:index": "terser build/index.js -c -m -o index.js --toplevel",
    "build:terse:lib/emojify": "terser build/lib/emojify.js -c -m -o lib/emojify.js --toplevel",
    "build:terse:lib/index": "terser build/lib/index.js -c -m -o lib/index.js --toplevel",
    "build:tsc": "tsc",
    "clean": "run-s clean:rmassets clean:mkdir && ln -s ../node-emoji/lib/emoji.json assets/",
    "clean:dist": "rimraf .nyc_output/ bin/ build/ coverage/ index.d.ts index.js lib/",
    "clean:mkdir": "mkdirp assets",
    "clean:rmassets": "rimraf assets",
    "cover": "nyc --check-coverage -r html -r text _mocha",
    "distclean": "run-p clean clean:dist",
    "lint": "eslint src/**/*.ts",
    "postpublish": "run-s distclean",
    "prepublishOnly": "run-s build clean:rmassets build:assets",
    "start": "ts-node src/bin/emojify.ts",
    "test": "run-p cover lint"
  },
  "types": "index.d.ts",
  "version": "1.2.0"
}
