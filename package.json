{
  "author": {
    "email": "km.8k6ce+npm@gmail.com",
    "name": "kei-g"
  },
  "bin": {
    "emojify": "bin/emojify.js"
  },
  "bugs": {
    "url": "https://github.com/kei-g/emojify-js/issues"
  },
  "description": "Text formatter for `:emoji:` style",
  "devDependencies": {
    "@kei-g/chmod": "^1.0.1",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "mkdirp": "^1.0.4",
    "mocha": "^9.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "terser": "^5.7.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "homepage": "https://github.com/kei-g/emojify-js",
  "keywords": [
    "convert",
    "converter",
    "emoji",
    "emojify",
    "emojifier",
    "emojis",
    "emoticon",
    "format",
    "formatter",
    "ideogram",
    "ideograms",
    "text",
    "text-convert",
    "text-converter",
    "text-format",
    "text-formatter",
    "utility",
    "utilities"
  ],
  "license": "BSD-3-Clause",
  "main": "bin/emojify.js",
  "name": "@kei-g/emojify",
  "nyc": {
    "branches": 60,
    "functions": 65,
    "lines": 75,
    "statements": 75
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kei-g/emojify-js.git"
  },
  "scripts": {
    "build": "npm-run-all -p distclean lint -s build:tsc build:terse build:chmod",
    "build:chmod": "chmod +x bin/emojifu.js",
    "build:terse": "terser build/emojify.js -c -m -o bin/emojify.js --toplevel",
    "build:tsc": "tsc",
    "clean": "run-s clean:rmassets clean:mkdir && ln -s node-emoji/lib/emoji.json assets/",
    "clean:dist": "rimraf .nyc_output/ bin/ build/ coverage/",
    "clean:mkdir": "mkdirp assets",
    "clean:rmassets": "rimraf assets",
    "cover": "nyc --check-coverage -r html -r text _mocha",
    "distclean": "run-p clean clean:dist",
    "lint": "eslint *.ts",
    "postpublish": "run-s distclean",
    "prepublishOnly": "run-s build",
    "start": "ts-node emojify.ts",
    "test": "run-p cover lint"
  },
  "version": "1.0.0"
}
